


<h1>Post: <%= @post.body %></h1>
<h4>Created by: <%= @post.user.name %></h4>
<h4>Project: <%= link_to @post.project.name, [@post.project] %></h4>
<hr>
<% if @post.comments.any? %>
<h4>Here are your comments:</h4>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= link_to comment.body, post_comment_path(@post, comment) %></li>
  <% end %>
</ul>
<hr>
<% end %>

<p><%= link_to "Add Comment", new_post_comment_path(@post) %>
<p><%= link_to "Edit", edit_project_post_path(@post.project, @post) %>
<p><%= link_to "Delete", project_post_path(@post.project, @post),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
